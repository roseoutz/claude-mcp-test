# ====================
# Server Configuration
# ====================
NODE_ENV=development
LOG_LEVEL=info

# ====================
# MCP Configuration
# ====================
MCP_SERVER_NAME=code-ai-mcp
MCP_SERVER_VERSION=1.0.0

# ====================
# AI Configuration
# ====================
# OpenAI Settings
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Anthropic Settings (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4000

# Embedding Settings
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSIONS=1536

# ====================
# Git Configuration
# ====================
GITHUB_TOKEN=your_github_token_here
GITLAB_TOKEN=your_gitlab_token_here
BITBUCKET_TOKEN=your_bitbucket_token_here
DEFAULT_BRANCH=main
GIT_TIMEOUT=30000
GIT_MAX_DEPTH=50

# ====================
# Security Configuration
# ====================
MAX_FILE_SIZE=1048576
MAX_FILE_SIZE_MB=1
ALLOWED_FILE_EXTENSIONS=.ts,.js,.py,.java,.go,.rs,.cpp,.c,.cs,.rb,.php,.swift,.kt,.scala,.hs,.clj,.ex,.dart,.lua,.r,.jl,.sh,.sql,.html,.css,.scss,.yaml,.yml,.json,.xml,.md,.mdx
EXCLUDED_PATHS=node_modules,.git,dist,build,coverage,.next,.cache,vendor,target,bin,obj
ENABLE_AUDIT_LOG=false

# ====================
# Cache Configuration
# ====================
CACHE_ENABLED=true
CACHE_TYPE=memory
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_NAMESPACE=mcp

# Redis Configuration (if CACHE_TYPE=redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ====================
# Vector Store Configuration
# ====================
VECTOR_STORE_PROVIDER=elasticsearch
VECTOR_STORE_URL=
VECTOR_STORE_API_KEY=
VECTOR_STORE_COLLECTION=codebase-index
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY=cosine

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=codebase-index
ELASTICSEARCH_AUTH=false
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Legacy ChromaDB Configuration (deprecated)
# VECTOR_STORE_PROVIDER=chromadb
# VECTOR_STORE_URL=http://localhost:8000

# ====================
# Database Configuration
# ====================
DATABASE_TYPE=sqlite
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=codeai
DATABASE_USER=
DATABASE_PASSWORD=
DATABASE_CONNECTION_STRING=
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ====================
# Rate Limiting
# ====================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ====================
# Server Configuration (HTTP Transport)
# ====================
SERVER_PORT=3000
SERVER_HOST=localhost
CORS_ENABLED=true
CORS_ORIGINS=*