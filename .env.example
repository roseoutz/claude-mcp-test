# Cache Configuration
CACHE_TTL=3600
CACHE_NAMESPACE=mcp

# Vector Store Configuration
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY=cosine
CHROMA_URL=http://localhost:8000

# Redis Configuration
REDIS_URL=redis://localhost:6379