# ========================================
# Monorepo Environment Configuration
# ========================================

# Node Environment
NODE_ENV=development
LOG_LEVEL=info

# ========================================
# MCP Configuration
# ========================================
MCP_SERVER_NAME=code-ai-mcp
MCP_SERVER_VERSION=1.0.0

# ========================================
# AI Services
# ========================================

# OpenAI (for embeddings and analysis)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview
EMBEDDING_MODEL=text-embedding-3-small

# Anthropic Claude (optional, for generation)
ANTHROPIC_API_KEY=sk-ant-...
CLAUDE_MODEL=claude-opus-4-1-20250805
MAX_TOKENS=4000
TEMPERATURE=0.3

# ========================================
# Server Configuration
# ========================================

# Local MCP Server (NestJS)
LOCAL_MCP_PORT=3001

# AWS API Server
AWS_API_PORT=3000
GRPC_PORT=50051
GRPC_SERVER_URL=localhost:50051

# ========================================
# AWS Configuration (Production)
# ========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ========================================
# Docker Infrastructure Services
# ========================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=codeai
POSTGRES_USER=codeai
POSTGRES_PASSWORD=codeai_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ChromaDB (Vector Database)
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_URL=http://localhost:8000
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY=cosine

# MinIO (S3-compatible storage)
MINIO_HOST=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=codeai-storage

# ========================================
# Git & Repository Configuration
# ========================================
GITHUB_TOKEN=ghp_...
DEFAULT_BRANCH=main

# ========================================
# Security & Limits
# ========================================
MAX_FILE_SIZE=1048576  # 1MB in bytes
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.ts,.js,.jsx,.tsx,.py,.java,.go,.rs,.cpp,.c,.cs,.rb,.php,.swift,.kt,.md,.json,.yaml
EXCLUDED_PATHS=node_modules,.git,dist,build,coverage,.next,.cache,target,.idea,.vscode

# ========================================
# CORS & Network
# ========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ========================================
# Cache Configuration
# ========================================
CACHE_TTL=3600  # 1 hour in seconds
CACHE_NAMESPACE=mcp

# ========================================
# Monitoring (Optional)
# ========================================
ENABLE_METRICS=false
METRICS_PORT=9090